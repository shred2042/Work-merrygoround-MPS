<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
     >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_offset"
        android:id="@+id/offset"
        android:weightSum="1">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/ok_btn"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_centerInParent="true"
            android:text="Write a word using the letters below and press OK "


            android:gravity="center"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_offset"
        android:layout_below="@id/offset"
        android:id="@+id/lay_bot">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/word"
            android:layout_gravity="center_vertical"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="del"
            android:id="@+id/del"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="@dimen/game_letter"
        android:id="@+id/lay_1"
        android:layout_below="@id/lay_bot"
        android:layout_marginLeft="22dp">
    
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn1"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn2"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn3"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn4"/>



    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="@dimen/game_letter"
        android:layout_below="@id/lay_1"
        android:id="@+id/lay_2"
        android:layout_marginLeft="0dp">

        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn5"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn6"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn7"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn8"/>
        <ImageButton
            android:layout_width="@dimen/game_letter"
            android:layout_height="@dimen/game_letter"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/btn9"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />


</RelativeLayout>